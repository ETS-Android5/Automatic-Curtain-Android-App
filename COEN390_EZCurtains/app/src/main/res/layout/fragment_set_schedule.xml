<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tool:context=".InsertDeviceFragment">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Device Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Room Name"
            android:textStyle="italic"
            android:layout_below="@+id/text_device_name"/>

        <TextView
            android:id="@+id/text_open_time"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_open_time"
            android:layout_marginStart="49dp"
            android:gravity="center"
            android:text=""
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_close_time"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_open_time"
            android:layout_marginStart="184dp"
            android:gravity="center"
            android:text=""
            android:textSize="18sp" />

        <Button
            android:id="@+id/set_open_time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:text="Set open time"
            android:textColor="@color/black"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/set_close_time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:text="Set close time"
            android:textColor="@color/black"
            app:cornerRadius="5dp" />

        <ca.antonious.materialdaypicker.MaterialDayPicker
            android:id="@+id/day_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:scaleX="0.9"
            android:scaleY="0.9" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="149dp"
            android:layout_height="55dp"
            android:layout_marginTop="345dp"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:text="SAVE"
            android:textColor="@color/black"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="149dp"
            android:layout_height="55dp"
            android:layout_marginStart="151dp"
            android:layout_marginTop="345dp"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:text="CANCEL"
            android:textColor="@color/black"
            app:cornerRadius="0dp" />

    </RelativeLayout>

</FrameLayout>
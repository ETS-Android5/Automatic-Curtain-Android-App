<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tool:context=".InsertDeviceFragment">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="#E8FAF0E2">

        <TextView
            android:id="@+id/text_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="Device Name"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_device_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Room Name"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_open_time"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_open_time"
            android:layout_marginStart="27dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text=""
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_close_time"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_open_time"
            android:layout_marginStart="164dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text=""
            android:textSize="18sp" />

        <Button
            android:id="@+id/set_open_time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/orange"
            android:elevation="4dp"
            android:text="Set open time"
            android:textColor="@color/dayDeselected"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/set_close_time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/orange"
            android:elevation="4dp"
            android:text="Set close time"
            android:textColor="@color/dayDeselected"
            app:cornerRadius="5dp" />

        <ca.antonious.materialdaypicker.MaterialDayPicker
            android:id="@+id/day_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:background="#FAF0E2"
            android:scaleX="1"
            android:scaleY="1" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="139dp"
            android:layout_height="55dp"
            android:layout_marginTop="325dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/orange"
            android:elevation="4dp"
            android:text="SAVE"
            android:textColor="@color/dayDeselected"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="139dp"
            android:layout_height="55dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="325dp"
            android:backgroundTint="@color/orange"
            android:elevation="4dp"
            android:text="CANCEL"
            android:textColor="@color/dayDeselected"
            app:cornerRadius="0dp" />

    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tool:context=".InsertDeviceFragment">

    <RelativeLayout
        android:layout_width="278dp"
        android:layout_height="341dp"
        android:background="#E8FAF0E2">

        <EditText
            android:id="@+id/enter_deviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-' "
            android:gravity="center_horizontal"
            android:hint="Enter Device Name" />

        <EditText
            android:id="@+id/enter_roomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_deviceName"
            android:layout_marginTop="42dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-' "
            android:gravity="center"
            android:hint="Enter Room Name" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="245dp"
            android:backgroundTint="@color/dayPressed"
            android:elevation="4dp"
            android:text="SAVE"
            android:textColor="@color/daySelectedTextColor"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="146dp"
            android:layout_marginTop="245dp"
            android:backgroundTint="@color/daySelected"
            android:elevation="4dp"
            android:text="CANCEL"
            android:textColor="@color/dayDeselected"
            app:cornerRadius="0dp" />

    </RelativeLayout>

</FrameLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E8FAF0E2">


    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="Open at: "
        android:textColor="#077703"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/open"
        android:text="12:00 AM"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/open_time"
        android:text="Close at: "
        android:textColor="#950303"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/close_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/close"
        android:text="12:00 PM"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/repeating_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_time"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="12dp"
        android:text="Not Scheduled"
        android:textColor="#6E5653"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>
